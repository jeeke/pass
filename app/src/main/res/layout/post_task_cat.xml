<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/task_cat"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittext_less_round"
            android:drawableEnd="@drawable/ic_drop"
            android:drawablePadding="8dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Who can do your task ?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/task_tag"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittext_less_round"
            android:drawableEnd="@drawable/ic_add_circle"
            android:drawablePadding="8dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Add Some Tags"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/task_cat" />

        <TextView
            android:id="@+id/task_must_haves"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittext_less_round"
            android:drawableEnd="@drawable/ic_add_circle"
            android:drawablePadding="8dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Must Haves"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/task_tag" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/task_tag_chips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp"
            app:chipSpacingHorizontal="12dp"
            app:chipSpacingVertical="12dp"
            app:layout_constraintBottom_toTopOf="@+id/task_must_haves"
            app:layout_constraintEnd_toEndOf="@+id/task_tag"
            app:layout_constraintStart_toStartOf="@+id/task_tag"
            app:layout_constraintTop_toBottomOf="@+id/task_tag" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/task_must_chips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/task_must_haves"
            app:layout_constraintStart_toStartOf="@+id/task_must_haves"
            app:layout_constraintTop_toBottomOf="@+id/task_must_haves" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>