<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <View
        android:background="#d9d8d8"
        android:id="@+id/task_cat_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/task_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/task_desc" />

    <View
        android:id="@+id/task_seekbar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#d9d8d8"
        app:layout_constraintBottom_toTopOf="@+id/divider8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_time" />

    <View
        android:id="@+id/task_desc"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:background="#d9d8d8"
        app:layout_constraintEnd_toStartOf="@+id/task_price"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/task_cat_image"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/task_price"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        android:background="#d9d8d8"
        app:layout_constraintBottom_toTopOf="@+id/task_dist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/task_desc" />

    <View
        android:id="@+id/task_dist"
        android:layout_width="75dp"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        android:background="#d9d8d8"
        app:layout_constraintBottom_toBottomOf="@+id/task_time"
        app:layout_constraintEnd_toEndOf="@+id/task_price"
        app:layout_constraintTop_toBottomOf="@+id/task_price" />

    <View
        android:id="@+id/task_dist"
        android:layout_width="70dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#d9d8d8"
        app:layout_constraintStart_toEndOf="@+id/task_cat_image"
        app:layout_constraintTop_toBottomOf="@+id/task_desc" />

    <View
        android:id="@+id/task_time"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#d9d8d8"
        app:layout_constraintStart_toEndOf="@+id/task_cat_image"
        app:layout_constraintTop_toBottomOf="@+id/task_dist" />

    <View
        android:id="@+id/divider8"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_seekbar" />

</androidx.constraintlayout.widget.ConstraintLayout>