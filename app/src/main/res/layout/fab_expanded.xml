<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/transparentGrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dashboard_fab_expanded_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/post_task"
            android:onClick="postTask"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/post_ques"
            app:layout_constraintEnd_toStartOf="@+id/post_ques"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/post_ques"
            app:srcCompat="@drawable/ic_task" />

        <ImageView
            android:id="@+id/post_ques"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="56dp"
            android:onClick="postQues"
            app:layout_constraintEnd_toStartOf="@+id/post_feed"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/post_task"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_ques1" />

        <ImageView
            android:id="@+id/post_feed"
            android:onClick="postFeed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/post_ques"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/post_ques"
            app:layout_constraintTop_toTopOf="@+id/post_ques"
            app:srcCompat="@drawable/ic_feed2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TASK"
            app:layout_constraintEnd_toEndOf="@+id/post_task"
            app:layout_constraintStart_toStartOf="@+id/post_task"
            app:layout_constraintTop_toBottomOf="@+id/post_task" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="124dp"
            android:text="QUESTION"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/post_ques"
            app:layout_constraintStart_toStartOf="@+id/post_ques"
            app:layout_constraintTop_toBottomOf="@+id/post_ques" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="EVENT"
            app:layout_constraintEnd_toEndOf="@+id/post_feed"
            app:layout_constraintStart_toStartOf="@+id/post_feed"
            app:layout_constraintTop_toBottomOf="@+id/post_feed" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>