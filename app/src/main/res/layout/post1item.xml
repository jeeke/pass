<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/taskerimage"
        android:layout_width="0dp"
        android:layout_height="311dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/taskername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/handyman" />

    <TextView
        android:id="@+id/taskername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        android:text="Uncle Ji"
        android:textColor="@color/color_13"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/taskerimage"
        app:layout_constraintStart_toStartOf="@+id/taskerimage"
        app:layout_constraintTop_toBottomOf="@+id/taskerimage" />
</androidx.constraintlayout.widget.ConstraintLayout>