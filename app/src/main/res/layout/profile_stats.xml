<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutstats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ProgressBar
            android:id="@+id/progressontime"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="90"
            android:progressDrawable="@drawable/circular_progress_bar_green"
            app:layout_constraintBottom_toTopOf="@+id/textView46"
            app:layout_constraintEnd_toStartOf="@+id/progressquality"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressquality"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="80"
            android:progressDrawable="@drawable/circular_progress_bar_green"
            app:layout_constraintBottom_toBottomOf="@+id/progressontime"
            app:layout_constraintEnd_toStartOf="@+id/progressbehaviour"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/progressontime"
            app:layout_constraintTop_toTopOf="@+id/progressontime" />

        <ProgressBar
            android:id="@+id/progressbehaviour"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="85"
            android:progressDrawable="@drawable/circular_progress_bar_green"
            app:layout_constraintBottom_toBottomOf="@+id/progressontime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/progressquality"
            app:layout_constraintTop_toTopOf="@+id/progressontime" />

        <TextView
            android:id="@+id/textView46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="On Time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/progressontime"
            app:layout_constraintStart_toStartOf="@+id/progressontime"
            app:layout_constraintTop_toBottomOf="@+id/progressontime" />

        <TextView
            android:id="@+id/textView48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Quality"
            app:layout_constraintEnd_toEndOf="@+id/progressquality"
            app:layout_constraintStart_toStartOf="@+id/progressquality"
            app:layout_constraintTop_toBottomOf="@+id/progressquality" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Behaviour"
            app:layout_constraintBottom_toBottomOf="@+id/textView48"
            app:layout_constraintEnd_toEndOf="@+id/progressbehaviour"
            app:layout_constraintStart_toStartOf="@+id/progressbehaviour"
            app:layout_constraintTop_toTopOf="@+id/textView48" />

        <TextView
            android:id="@+id/textViewontime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90%"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/progressontime"
            app:layout_constraintEnd_toEndOf="@+id/progressontime"
            app:layout_constraintStart_toStartOf="@+id/progressontime"
            app:layout_constraintTop_toTopOf="@+id/progressontime" />

        <TextView
            android:id="@+id/textViewquality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80%"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/progressquality"
            app:layout_constraintEnd_toEndOf="@+id/progressquality"
            app:layout_constraintStart_toStartOf="@+id/progressquality"
            app:layout_constraintTop_toTopOf="@+id/progressquality" />

        <TextView
            android:id="@+id/textViewbehaviour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85%"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/progressbehaviour"
            app:layout_constraintEnd_toEndOf="@+id/progressbehaviour"
            app:layout_constraintStart_toStartOf="@+id/progressbehaviour"
            app:layout_constraintTop_toTopOf="@+id/progressbehaviour" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Statistics"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutrating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider11">

        <TextView
            android:id="@+id/textView72"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Tasker Rating"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/taskerrating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/taskerrating" />

        <TextView
            android:id="@+id/textView74"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Poster Rating"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/posterating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/posterating" />

        <TextView
            android:id="@+id/textView75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Community Factor"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/ratingBar7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ratingBar7" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ratingBar7"
            style="?ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:rating="4.2"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/taskerrating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RatingBar
            android:id="@+id/taskerrating"
            style="?ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/posterating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar7" />

        <RatingBar
            android:id="@+id/posterating"
            style="?ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taskerrating" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/sugga"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutrating"
        app:srcCompat="@drawable/sugga" />

    <View
        android:id="@+id/divider11"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:background="?android:attr/listDivider"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutstats" />

</androidx.constraintlayout.widget.ConstraintLayout>