<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Must Haves"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/din"
            android:text="Web Development"
            android:textColor="?colorAccent"
            app:chipBackgroundColor="?colorPrimary"
            app:chipCornerRadius="8dp"
            app:chipStrokeColor="@color/green_A400"
            app:chipStrokeWidth="2dp"
            app:layout_constraintEnd_toStartOf="@+id/chip4"
            app:layout_constraintStart_toStartOf="@id/textView45"
            app:layout_constraintTop_toBottomOf="@+id/textView45" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip4"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:text="Android"
            android:textColor="?colorAccent"
            app:chipBackgroundColor="?colorPrimary"
            app:chipCornerRadius="8dp"
            app:chipStrokeColor="@color/green_A400"
            app:chipStrokeWidth="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/chip2"
            app:layout_constraintEnd_toStartOf="@+id/chip5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/chip2"
            app:layout_constraintTop_toTopOf="@+id/chip2" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip5"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:text="Kotlin"
            android:textColor="?colorAccent"
            app:chipBackgroundColor="?colorPrimary"
            app:chipCornerRadius="8dp"
            app:chipStrokeColor="@color/green_A400"
            app:chipStrokeWidth="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/chip4"
            app:layout_constraintEnd_toStartOf="@+id/chip6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/chip4"
            app:layout_constraintTop_toTopOf="@+id/chip4" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip7"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:text="UI and UX"
            android:textColor="?colorAccent"
            app:chipBackgroundColor="?colorPrimary"
            app:chipCornerRadius="8dp"
            app:chipStrokeColor="@color/green_A400"
            app:chipStrokeWidth="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/chip2"
            app:layout_constraintTop_toBottomOf="@+id/chip2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>