<resources>

    <style name="LightMode" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/creme</item>
        <item name="colorAccent">@color/blue_grey</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/dark_blue_grey</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textViewStyle">@style/Widget.TextView.Custom</item>
        <item name="colorBackgroundFloating">#F0F3F5</item>
        <item name="android:statusBarColor">@color/creme</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="fontFamily">@font/din</item>
        <item name="ratingBarStyleSmall">@style/RatingBar</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/green_A700</item>
    </style>

    <style name="ButtonStyle">
        <!--<item name="android:padding">16dp</item>-->
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_login</item>
        <!--<item name="backgroundTint">?colorSecondary</item>-->
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="Widget.TextView.Custom" parent="android:Widget.TextView">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="ImageIcon">
        <item name="tint">?attr/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="LightMode">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


</resources>
