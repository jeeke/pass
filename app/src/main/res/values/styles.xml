<resources>

    <style name="LightMode" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/creme</item>
        <item name="colorAccent">@color/blue_grey</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/dark_blue_grey</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textViewStyle">@style/Widget.TextView.Custom</item>
        <item name="colorBackgroundFloating">#F0F3F5</item>
        <item name="android:statusBarColor">@color/creme</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:fontFamily">@font/din</item>
        <item name="android:ratingBarStyleSmall">@style/RatingBar</item>

    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/green_A700</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="Widget.TextView.Custom" parent="android:Widget.TextView">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="ImageIcon">
        <item name="android:tint">?attr/colorAccent</item>
    </style>

    <style name="LightMode.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightMode.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LightMode.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
