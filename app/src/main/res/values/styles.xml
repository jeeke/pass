<resources>

    <style name="LightMode" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/lightGrey</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textViewStyle">@style/Widget.TextView.Custom</item>
        <item name="colorBackgroundFloating">#F0F3F5</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:toolbarStyle">@style/TextAppearance.Widget.AppCompat.Toolbar.Title.</item>

    </style>

    <style name="DarkMode" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/darkGrey</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textViewStyle">@style/Widget.TextView.Custom</item>
        <item name="colorBackgroundFloating">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:toolbarStyle">@style/TextAppearance.Widget.AppCompat.Toolbar.Title.</item>

    </style>

    <style name="TextAppearance.Widget.AppCompat.Toolbar.Title." parent="android:Widget.TextView">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Widget.TextView.Custom" parent="android:Widget.TextView">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="InvertedText">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="InvertedImageIcon">
        <item name="android:tint">?attr/colorPrimary</item>
    </style>


    <style name="ImageIcon">
        <item name="android:tint">?attr/colorAccent</item>
    </style>

</resources>
